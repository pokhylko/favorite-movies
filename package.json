{
  "name": "favorite-movies",
  "homepage": ".",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.3.4",
    "classnames": "^2.3.2",
    "query-string": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "react-scripts": "5.0.1",
    "recoil": "^0.7.7"
  },
  "scripts": {
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "tsc --noEmit && eslint src/**/*.{ts,tsx} --cache --max-warnings=0",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install",
    "ci:build": "yarn run build",
    "ci:lint": "yarn run lint",
    "ci:test": "yarn run test",
    "storybook": "storybook dev -p 6006 -s public",
    "build-storybook": "build-storybook",
    "test-storybook": "test-storybook",
    "recoil": "facebookexperimental/Recoil.git#nightly"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@storybook/addon-actions": "^7.0.0-rc.7",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-interactions": "^7.0.0-rc.7",
    "@storybook/addon-links": "^7.0.0-rc.7",
    "@storybook/addon-mdx-gfm": "^7.0.0-rc.7",
    "@storybook/node-logger": "^7.0.0-rc.7",
    "@storybook/preset-create-react-app": "^7.0.2",
    "@storybook/react": "^7.0.0-rc.7",
    "@storybook/react-webpack5": "^7.0.0-rc.7",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/sass": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-plugin-named-exports-order": "^0.0.2",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prop-types": "^15.8.1",
    "sass": "^1.59.3",
    "storybook": "^7.0.0-rc.7",
    "typescript": "^5.0.3",
    "typescript-plugin-css-modules": "^5.0.0",
    "webpack": "^5.76.3"
  },
  "jest": {
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    }
  }
}
